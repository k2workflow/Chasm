    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Net.Compilers" Version="2.3.2" />
    <PackageReference Include="SonarAnalyzer.CSharp" Version="6.4.1.3596">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="SourceCode.Clay.Buffers" Version="1.0.0-preview1-00202" />
    <PackageReference Include="SourceCode.Clay.Collections" Version="1.0.0-preview1-00202" />
  </ItemGroup>

  <PropertyGroup>
    <PackageId>SourceCode.Chasm</PackageId>
    <Authors>SourceCode</Authors>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Description>CAS - Content Addressable Storage.</Description>
    <PackageTags>cas content storage sha1 git model</PackageTags>
  </PropertyGroup>
</Project>
